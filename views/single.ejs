<%- include('./template/header.ejs') %>

<!-- Page Header -->
<header class="masthead" style="background-image: url('/images/<%= posts.image %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= posts.title %></h1>
          <span class="subheading"> <%= posts.description %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-preview">
          <h2 class="post-title">

          </h2>
          <h3 class="post-subtitle">
             
          </h3>
          <p>
              <%= posts.content %>
          </p>
        <p class="post-meta">Posted by
          <a href="#"><%= posts.userName %> </a>
          on <%= posts.createdAt.toDateString() %></p>
      </div>
      <hr>
        
       
     
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>

<hr>


<%- include('./template/footer.ejs') %>
