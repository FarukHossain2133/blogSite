<%- include('./template/header.ejs') %>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create New Post</h1>
            <div class="container">
                <div class="row">
                </div class="col-md-8 offset-md-2"> 

                <div class="post_form">

                    <form action="/create/new" method="POST" enctype="multipart/form-data">
                      <div class="control-group">
                          <div class="form-group floating-label-form-group controls">
                              <label for="title">User Name</label>
                              <input type="text" id="title" name="userName" class="form-control" placeholder="Write Your Name">
                          </div>
                      </div>

                        <div class="control-group">
                                <div class="form-group floating-label-form-group controls">
                                    <label for="title">Title</label>
                                    <input type="text" id="title" name="title" class="form-control" placeholder="Title">
                                </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls">
                                <label>Description</label>
                                <input type="text" name="description" class="form-control" placeholder="Description">
                            </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Content</label>
                            <textarea type="text" name="content" class="form-control" cols="30" rows="10" placeholder="Contents..."></textarea>
                        </div>
                </div>
                <div class="form-group mt-5">
                    <label>background image</label>
                    <input type="file" name="image" class="form-control-file" >
                  </div>
                <div class="form-group text-center my-4">
                    <button class="btn btn-primary">Create Post</button>
                </div>
                    </form>

                </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </header>


  <hr>
